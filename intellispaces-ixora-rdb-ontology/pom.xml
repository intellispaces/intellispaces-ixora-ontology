<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>tech.intellispaces</groupId>
        <artifactId>intellispaces-ixora-ontology-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>intellispaces-ixora-rdb-ontology</artifactId>
    <packaging>jar</packaging>
	
    <build>
        <plugins>
            <plugin>
                <groupId>tech.intellispaces</groupId>
                <artifactId>intellispaces-jaquarius-generator-maven-plugin</artifactId>
                <version>0.0.1-SNAPSHOT</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>jaquarius-generator</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <inputSpec>${project.basedir}/rdb.yaml</inputSpec>
                    <repositories>
                        <repository>file:///${project.basedir}/../intellispaces-ixora-core-ontology/core.yaml</repository>
                        <repository>file:///${project.basedir}/../intellispaces-ixora-data-ontology/data.yaml</repository>
                        <repository>file:///${project.basedir}/../intellispaces-ixora-system-ontology/system.yaml</repository>
                    </repositories>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>tech.intellispaces</groupId>
            <artifactId>intellispaces-ixora-core-ontology</artifactId>
        </dependency>
        <dependency>
            <groupId>tech.intellispaces</groupId>
            <artifactId>intellispaces-ixora-data-ontology</artifactId>
        </dependency>
        <dependency>
            <groupId>tech.intellispaces</groupId>
            <artifactId>intellispaces-ixora-system-ontology</artifactId>
        </dependency>
    </dependencies>
</project>